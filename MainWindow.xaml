<Window x:Class="SolutionCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolutionCleaner"
        mc:Ignorable="d"
        Title="Solution Cleaner" Height="180" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="LoadButton" Content="Load Solution" Click="LoadButton_OnClick"/>
        <TextBlock Grid.Row="1" Name="SolutionName" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Grid.Row="2" Name="ClearButton" Content="Clear Solution" IsEnabled="False" Click="ClearButton_OnClick"/>
    </Grid>
</Window>